{
  "extends": ["../../biome.json"],
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "include": [
      "./abi/**",
      "./app/**",
      "./components/**",
      "./constants/**",
      "./design-system/**",
      "./gql/**",
      "./hooks/**",
      "./styles/**",
      "./utils/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noRedeclare": "off"
      },
      "complexity": {
        "useOptionalChain": "off",
        "noExtraBooleanCast": "off"
      }
    },
    "include": [
      "./abi/**",
      "./app/**",
      "./components/**",
      "./constants/**",
      "./design-system/**",
      "./gql/**",
      "./hooks/**",
      "./styles/**",
      "./utils/**"
    ]
  }
}
