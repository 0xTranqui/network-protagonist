{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "paths": {
        "@/services": ["src/services/index.ts"],
        "@/lib": ["src/lib/index.ts"],
        "@/types": ["src/types/index.ts"],
      }
    },
    "exclude": ["node_modules"],
  }