{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "**/.next",
      "**/.turbo",
      "**/node_modules",
      "cache",
      "coverage",
      "dist",
      "tsconfig.json",
      "tsconfig.*.json",
      "gql/sdk.generated.ts",
      "pnpm-lock.yaml",
      "README.md"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": [
      "**/.next",
      "**/.turbo",
      "**/node_modules",
      "cache",
      "coverage",
      "dist",
      "tsconfig.json",
      "tsconfig.*.json",
      "gql/sdk.generated.ts",
      "pnpm-lock.yaml",
      "README.md"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noRedeclare": "off"
      },
      "complexity": {
        "useOptionalChain": "off",
        "noExtraBooleanCast": "off"
      }
    },
    "ignore": [
      "**/.next",
      "**/.turbo",
      "**/node_modules",
      "cache",
      "coverage",
      "dist",
      "tsconfig.json",
      "tsconfig.*.json",
      "gql/sdk.generated.ts",
      "pnpm-lock.yaml",
      "README.md"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded"
    }
  }
}
